func add_rk(a : logic[4][4][8], b : logic[4][4][8]){
    let row_1 = #{a[0][3]^b[0][3], a[0][2]^b[0][2], a[0][1]^b[0][1], a[0][0]^b[0][0]};
    let row_2 = #{a[1][3]^b[1][3], a[1][2]^b[1][2], a[1][1]^b[1][1], a[1][0]^b[1][0]};
    let row_3 = #{a[2][3]^b[2][3], a[2][2]^b[2][2], a[2][1]^b[2][1], a[2][0]^b[2][0]};
    let row_4 = #{a[3][3]^b[3][3], a[3][2]^b[3][2], a[3][1]^b[3][1], a[3][0]^b[3][0]};
    #{row_4, row_3, row_2, row_1}
}

proc sbox(ep : left sbox_ch) extern("aes_sbox_extern"){
    ep.req ("req": :);
    ep.res ("out": :);
}

