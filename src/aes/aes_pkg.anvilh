extern import "aes_sbox_lut.sv" 
enum ciph_op_e{
    NOP1,
    CIPH_FWD,
    CIPH_INV,
    NOP2
}

enum key_len_e {
    NOP1,
    KEY_LEN_128,
    KEY_LEN_192,
    NOP2,
    KEY_LEN_256,
    NOP3
}

enum sp2v_e {
    NOP1,
    NOP2,
    NOP3,
    SP2V_HIGH,
    SP2V_LOW,
    NOP4
}

struct init_pack{
    op : ciph_op_e,
    key_len : key_len_e
}
struct aes_key_expand_in_pack {
    key : logic[8][32],
    round : logic[4],
    ctrl : init_pack
}

struct aes_key_expand_out_pack {
    key : logic[8][32],
    error : logic
}
// struct aes_core_in_pack {
//     state_init_i : logic[4][4][8],
//     key_init_i : logic[8][32]
// }
struct aes_control_pack {
    prng_reseed_i : logic,
    // key_clear_i : logic,
    // data_out_clear_i : logic,
    alert_fatal_i : logic,
    // prd_clearing_state_i : logic[4][4][8],
    // prd_clearing_key_i : logic[8][32],
    force_masks_i : logic,
    cfg_valid_i : logic,
    op_i : ciph_op_e
}

struct aes_core_out_pack {  
    data_in_mask_o : logic[4][4][8],
    alert_o : logic,
    // data_out_clear_o : logic,
    // key_clear_o : logic,
    prng_reseed_o : logic,
    state_o : logic[4][4][8]
}

struct sub_bytes_in_pack {
    data : logic[4][4][8],
    op : ciph_op_e
}

struct sub_bytes_out_pack {
    data : logic[4][4][8],
    error : logic
}
struct data_in_pack {
    data : logic[4][4][8],
    op : ciph_op_e
}


chan aes_key_expand_ch{
    left init : (init_pack@#1) @#1 - @dyn,
    left req : (aes_key_expand_in_pack@#1),
    right res : (aes_key_expand_out_pack@#1) @#req - @#req
}

chan shift_rows_ch{
    left req : (data_in_pack@#1) @#1 - @#1,
    right res : (logic[4][4][8]@#1) @#1 - @#1
}

chan mix_column_ch{
    left req : (data_in_pack@#1) @#1 - @#1,
    right res : (logic[4][4][8]@#1) @#1 - @#1
}


chan entropy_ch <EntropyWidth : int> {
    left req : (logic@#1),
    right res : (logic[EntropyWidth]@#1) @#req - @#req
}

chan aes_core_ch {
    left dec_key_gen_req :(logic@#1),
    left key_pack : (logic[8][32]@#1) @#1 - @#1, //basically make the sync patter @#msg1|msg2|
    left key_len_i : (key_len_e@eternal) @#1 - @#1, //whenever basically ""
    left crypt: (logic[4][4][8]@#1),
    left ctrl : (aes_control_pack@eternal) @#1 - @#1,
    right crypt_res : (aes_core_out_pack@#1),
    right dec_key_gen_res : (logic@#1) @dyn - @#1,
    left data_out_clear_i : (logic[4][4][8]@#1) @#1 - @dyn,
    left key_clear_i : (logic[8][32]@#1) @#1 - @dyn,
    right data_out_clear_o : (logic@#1) @#1 - @#1,
    right key_clear_o : (logic@#1) @#1 - @#1
}

chan sub_bytes_ch {
    left req : (data_in_pack@#1) @#1 - @dyn,
    right res : (logic[4][4][8]@#1) @#req - @#req
}

