func circ_byte_shift(data: logic[4][8], shift: logic[2]) {
    match shift {
        2'h0 => data,
        2'h1 => #{data[2], data[1], data[0], data[3]},
        2'h2 => #{data[1], data[0], data[3], data[2]},
        2'h3 => #{data[0], data[3], data[2], data[1]},
        _ => data
    }
}
func circ_byte_shift_flat(data: logic[32], shift: logic[2]) {
    match shift {
        2'h0 => data,
        2'h1 => #flat{data[16+:8], data[8+:8], data[0+:8], data[24+:8]},
        2'h2 => #flat{data[8+:8], data[0+:8], data[24+:8], data[16+:8]},
        2'h3 => #flat{data[0+:8], data[24+:8], data[16+:8], data[8+:8]},
        _ => data
    }
}
func create_byte_pack(data : logic[4][32]){
    let row_1 = #{data[0][24+:8], data[0][16+:8], data[0][8+:8], data[0][0+:8]};
    let row_2 = #{data[1][24+:8], data[1][16+:8], data[1][8+:8], data[1][0+:8]};
    let row_3 = #{data[2][24+:8], data[2][16+:8], data[2][8+:8], data[2][0+:8]};
    let row_4 = #{data[3][24+:8], data[3][16+:8], data[3][8+:8], data[3][0+:8]};
    #{row_4, row_3, row_2, row_1}
}

func div2(data){
    #{data[0], data[7], data[6], data[5], data[4]^data[0], data[3]^data[0], data[2], data[1]^data[0]}
}


func transpose(data : logic[4][4][8]){
    let row_1_t = #{data[3][0], data[2][0], data[1][0], data[0][0]};
    let row_2_t = #{data[3][1], data[2][1], data[1][1], data[0][1]};
    let row_3_t = #{data[3][2], data[2][2], data[1][2], data[0][2]};
    let row_4_t = #{data[3][3], data[2][3], data[1][3], data[0][3]};
    #{row_4_t, row_3_t, row_2_t, row_1_t}
}

func mul2(data){
    #{data[6], data[5],data[4], data[3]^data[7], data[2]^data[7],data[1], data[0]^data[7], data[7]}
}

func mul4(data){
    let data_mult2 = call mul2(data) >>
    call mul2(data_mult2)
}


