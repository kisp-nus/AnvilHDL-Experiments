struct data_in_pack{
    data : logic[4][4][8],
    op : ciph_op_e
}

chan shift_rows_ch{
    left req : (data_in_pack@#1) @#1 - @#1,
    right res : (logic[4][4][8]@#1) @#req - @#req
}

chan mix_column_ch{
    left req : (data_in_pack@#1) @#1 - @#1,
    right res : (logic[4][4][8]@#1) @#req - @#req
}


chan entropy_ch <EntropyWidth : int> {
    left req : (logic@#1),
    right res : (logic[EntropyWidth]@#1) @#req - @#req
}

chan aes_core_ch {
    left req : (aes_core_in_pack@#1),
    right res : (aes_core_out_pack@#1)
}

chan sub_bytes_ch {
    left req : (sub_bytes_in_pack@#1) @#1 - @dyn,
    right res : (sub_bytes_out_pack@#1)
}

