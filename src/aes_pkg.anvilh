func circ_byte_shift(data, shift){
    match shift {
        2'h0 => data,
        2'h1 => #{data[16+:8], data[8+:8], data[0+:8], data[24+:8]},
        2'h2 => #{data[8+:8], data[0+:8], data[24+:8], data[16+:8]},
        2'h3 => #{data[0+:8], data[24+:8], data[16+:8], data[8+:8]},
        _ => data
    }
}

