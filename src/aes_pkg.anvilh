}


func transpose(data){
    let row_1_t = #{data[0][3], data[0][2], data[0][1], data[0][0]};
    let row_2_t = #{data[1][3], data[1][2], data[1][1], data[1][0]};
    let row_3_t = #{data[2][3], data[2][2], data[2][1], data[2][0]};
    let row_4_t = #{data[3][3], data[3][2], data[3][1], data[3][0]};
    #{row_4_t, row_3_t, row_2_t, row_1_t}
}

func mul2(data){
    #{data[6], data[5],data[4], data[3]^data[7], data[2]^data[7],data[1], data[0]^data[7], data[7]}
}

func mul4(data){
    let data_mult2 = call mul2(data);
    call mul2(data_mult2)
}